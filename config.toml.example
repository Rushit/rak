# ZDK Configuration Example
#
# üîí SECURITY: This file contains sensitive API keys
#
# Setup Instructions:
# 1. Copy this file: cp config.toml.example config.toml
# 2. Edit config.toml with your actual API keys or configure gcloud
# 3. config.toml is in .gitignore and will NOT be committed to git
#
# ‚öôÔ∏è  Configuration Priority:
# 1. config.toml (highest priority)
# 2. Environment variables (fallback)
# 3. Defaults (lowest priority)
#
# This allows different configs for different environments:
# - config.toml       (main/development)
# - config.test.toml  (for tests)
# - config.prod.toml  (for production)

# =============================================================================
# Authentication Configuration
# =============================================================================
# ZDK supports two authentication methods:
# 1. API Key (Public Gemini API) - Good for quick start and development
# 2. Google Cloud (gcloud) - Best for production and enterprise use
#
# Choose ONE method below:

# ----------------------------------------------------------------------------
# Option 1: API Key Authentication (Default for Development)
# ----------------------------------------------------------------------------
# Use Google's public Gemini API with an API key
# Get your API key from: https://aistudio.google.com/apikey

[auth]
provider = "api_key"

[auth.api_key]
# Recommended: Use environment variable
key = "${GOOGLE_API_KEY}"
# Alternative: Direct value (only for local development, never commit!)
# key = "your-gemini-api-key-here"

# ----------------------------------------------------------------------------
# Option 2: Google Cloud Authentication (Best for Production)
# ----------------------------------------------------------------------------
# Use Google Cloud's Vertex AI with gcloud CLI authentication
# Setup:
#   1. Install gcloud CLI: https://cloud.google.com/sdk/docs/install
#   2. Authenticate: gcloud auth login
#   3. Set project: gcloud config set project YOUR_PROJECT_ID
#   4. Enable Vertex AI API in your GCP project
#
# Uncomment the following to use gcloud auth:

# [auth]
# provider = "gcloud"
# 
# [auth.gcloud]
# # Optional: Specify project ID (auto-detected from gcloud if not set)
# project_id = "my-gcp-project"
# # Optional: Specify region (defaults to us-central1)
# location = "us-central1"
# # Optional: Custom Vertex AI endpoint
# # endpoint = "https://us-central1-aiplatform.googleapis.com"

# =============================================================================
# Model Configuration
# =============================================================================
# ZDK supports multiple LLM providers:
# - "gemini"     : Google Gemini models (via API key or Vertex AI)
# - "openai"     : OpenAI GPT models
# - "anthropic"  : Anthropic Claude models (coming soon)
# - "local"      : Local models via Ollama (coming soon)

[model]
# Select your provider
provider = "gemini"          # Options: "gemini", "openai", "anthropic", "local"
model_name = "gemini-2.0-flash-exp"  # Model ID for your chosen provider

# Legacy: API key can also be set here (deprecated, use [auth] instead)
# api_key = "${GEMINI_API_KEY}"

# =============================================================================
# OpenAI Configuration (Optional)
# =============================================================================
# Set these if provider = "openai" or if you want OpenAI available as fallback
# Get your API key from: https://platform.openai.com/api-keys

# Option 1: Environment variable (recommended)
# openai_api_key = "${OPENAI_API_KEY}"
# Option 2: Direct value (only for local development, never commit!)
# openai_api_key = "sk-your-openai-api-key-here"

# Optional: Custom OpenAI-compatible endpoint
# openai_base_url = "https://api.openai.com/v1"  # Default OpenAI endpoint
# openai_base_url = "http://localhost:11434/v1"  # Example: Ollama OpenAI-compatible endpoint

# =============================================================================
# Anthropic Configuration (Optional - Coming Soon)
# =============================================================================
# Set these if provider = "anthropic"
# Get your API key from: https://console.anthropic.com/

# anthropic_api_key = "${ANTHROPIC_API_KEY}"

# =============================================================================
# Server Configuration
# =============================================================================

[server]
host = "127.0.0.1"
port = 8080

# =============================================================================
# Session Storage Configuration
# =============================================================================

[session]
# Development: Use in-memory storage (sessions lost on restart)
provider = "in-memory"

# Production: Use database storage
# provider = "postgres"
# connection_string = "${DATABASE_URL}"

# =============================================================================
# Additional Tool Configurations (Optional)
# =============================================================================

# Web Tools Configuration
# -------------------------
